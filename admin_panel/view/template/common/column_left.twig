<nav id="column-left">
	<div id="navigation"><span class="fa-solid fa-bars"></span> {{ text_navigation }}</div>
	<ul id="menu">
		{% set i = 0 %}
		{% for menu in menus %}
			<li id="{{ menu.id }}">
				{% if menu.href %}
					<a href="{{ menu.href }}"><i class="fa-solid {{ menu.icon }}"></i> {{ menu.name }}</a>
				{% else %}
					<a href="#collapse-{{ i }}" data-bs-toggle="collapse" class="parent collapsed"><i class="fa-solid {{ menu.icon }}"></i> {{ menu.name }}</a>
				{% endif %}
				{% if menu.children %}
					<ul id="collapse-{{ i }}" class="collapse">
						{% set j = 0 %}
						{% for child_1 in menu.children %}
							<li>
								{% if child_1.href %}
									<a href="{{ child_1.href }}">{{ child_1.name }}</a>
								{% else %}
									<a href="#collapse-{{ i }}-{{ j }}" data-bs-toggle="collapse" class="parent collapsed">{{ child_1.name }}</a>
								{% endif %}
								{% if child_1.children %}
									<ul id="collapse-{{ i }}-{{ j }}" class="collapse">
										{% for child_2 in child_1.children %}
											<li><a href="{{ child_2.href }}">{{ child_2.name }}</a></li>
										{% endfor %}
									</ul>
								{% endif %}
							</li>
							{% set j = j + 1 %}
						{% endfor %}
					</ul>
				{% endif %}
			</li>
			{% set i = i + 1 %}
		{% endfor %}
	</ul>
