{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-tenant" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa-solid fa-circle-exclamation"></i> {{ error_warning }} <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    {% endif %}
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-pencil"></i> {{ text_form }}</div>
      <div class="card-body">
        <form id="form-tenant" action="{{ save }}" method="post" enctype="multipart/form-data">
          
          <fieldset>
            <legend>{{ legend_company }}</legend>
            <div class="row mb-3 required">
              <label for="input-company-name" class="col-sm-2 col-form-label"><span class="text-danger"></span> {{ entry_company_name }}</label>
              <div class="col-sm-10">
                <input type="text" name="company_name" value="{{ company_name }}" placeholder="{{ entry_company_name }}" id="input-company-name" class="form-control" required />
                {% if error_company_name %}
                <div class="text-danger">{{ error_company_name }}</div>
                {% endif %}
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-business-type" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_business_type }}</label>
              <div class="col-sm-10">
                <input type="text" name="business_type" value="{{ business_type }}" placeholder="{{ entry_business_type }}" id="input-business-type" class="form-control" required />
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-owner-name" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_owner_name }}</label>
              <div class="col-sm-10">
                <input type="text" name="owner_name" value="{{ owner_name }}" placeholder="{{ entry_owner_name }}" id="input-owner-name" class="form-control" required />
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-address" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_address }}</label>
              <div class="col-sm-10">
                <textarea name="address" placeholder="{{ entry_address }}" id="input-address" class="form-control" required>{{ address }}</textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-city" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_city }}</label>
              <div class="col-sm-10">
                <input type="text" name="city" value="{{ city }}" placeholder="{{ entry_city }}" id="input-city" class="form-control" required />
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-province" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_province }}</label>
              <div class="col-sm-10">
                <input type="text" name="province" value="{{ province }}" placeholder="{{ entry_province }}" id="input-province" class="form-control" required />
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-country" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_country }}</label>
              <div class="col-sm-10">
                <input type="text" name="country" value="{{ country }}" placeholder="{{ entry_country }}" id="input-country" class="form-control" required />
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-postcode" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_postcode }}</label>
              <div class="col-sm-10">
                <input type="text" name="postcode" value="{{ postcode }}" placeholder="{{ entry_postcode }}" id="input-postcode" class="form-control" required />
              </div>
            </div>
            <div class="row mb-3">
              <label for="input-contact" class="col-sm-2 col-form-label"><span class="text-danger">*</span> {{ entry_contact }}</label>
              <div class="col-sm-10">
                <input type="text" name="contact" value="{{ contact }}" placeholder="{{ entry_contact }}" id="input-contact" class="form-control" required />
              </div>
            </div>
          </fieldset>
          
          <fieldset>
            <legend>{{ legend_admin }}</legend>
            <div class="row mb-3 required">
              <label for="input-username" class="col-sm-2 col-form-label">{{ entry_username }}</label>
              <div class="col-sm-10">
                <input type="text" name="username" value="{{ username }}" placeholder="{{ entry_username }}" id="input-username" class="form-control" />
                {% if error_username %}
                <div class="text-danger">{{ error_username }}</div>
                {% endif %}
              </div>
            </div>
            <div class="row mb-3 required">
              <label for="input-firstname" class="col-sm-2 col-form-label">{{ entry_firstname }}</label>
              <div class="col-sm-10">
                <input type="text" name="firstname" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="input-firstname" class="form-control" />
                {% if error_firstname %}
                <div class="text-danger">{{ error_firstname }}</div>
                {% endif %}
              </div>
            </div>
            <div class="row mb-3 required">
              <label for="input-lastname" class="col-sm-2 col-form-label">{{ entry_lastname }}</label>
              <div class="col-sm-10">
                <input type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="form-control" />
                {% if error_lastname %}
                <div class="text-danger">{{ error_lastname }}</div>
                {% endif %}
              </div>
            </div>
            <div class="row mb-3 required">
              <label for="input-email" class="col-sm-2 col-form-label">{{ entry_email }}</label>
              <div class="col-sm-10">
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                {% if error_email %}
                <div class="text-danger">{{ error_email }}</div>
                {% endif %}
              </div>
            </div>
            <div class="row mb-3 required">
              <label for="input-password" class="col-sm-2 col-form-label">{{ entry_password }}</label>
              <div class="col-sm-10">
                <input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password" class="form-control" autocomplete="new-password" />
                {% if error_password %}
                <div class="text-danger">{{ error_password }}</div>
                {% endif %}
              </div>
            </div>
          </fieldset>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 