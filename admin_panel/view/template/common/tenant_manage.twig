{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <a href="{{ add_user }}" data-bs-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-users"></i> {{ text_users_list }}</div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <td class="text-start">{{ column_username }}</td>
                <td class="text-start">{{ column_name }}</td>
                <td class="text-start">{{ column_role }}</td>
                <td class="text-start">{{ column_status }}</td>
                <td class="text-start">{{ column_date_added }}</td>
                <td class="text-end">{{ column_action }}</td>
              </tr>
            </thead>
            <tbody>
              {% if users %}
                {% for user in users %}
                  <tr>
                    <td class="text-start">{{ user.username }}</td>
                    <td class="text-start">{{ user.name }}</td>
                    <td class="text-start">{{ user.role }}</td>
                    <td class="text-start">{{ user.status }}</td>
                    <td class="text-start">{{ user.date_added }}</td>
                    <td class="text-end">
                      <a href="{{ user.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a>
                    </td>
                  </tr>
                {% endfor %}
              {% else %}
                <tr>
                  <td class="text-center" colspan="6">{{ text_no_results }}</td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }} 